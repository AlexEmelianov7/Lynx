<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Dialog
        id="authDialog"
        title="{i18n>ttlAuthDialog}"
        draggable="true" 
        resizable="true"
        class="sapUiSizeCompact"
        beforeClose="onBeforeCloseAuth">
        <VBox
            class="sapUiSmallMargin"
            validateFieldGroup="onValidateAuthFields">
            <Label
                required="true"
                text="{i18n>lEmail}:"/>
             <Input
                fieldGroupIds="inputEmail"
                placeholder="{i18n>phEmail}"
                type="Email"
                maxLength="15"/>
            <Label
                required="true"
                text="{i18n>lPassword}:"/>
            <Input
                fieldGroupIds="input"
                placeholder="{i18n>phPassword}"
                type="Password"
                maxLength="15"/>
            <Label
                required="true"
                text="{i18n>lName}:"/>
             <Input
                fieldGroupIds="input"
                placeholder="{i18n>phName}"
                maxLength="20"/>
            <Label
                required="true"
                text="{i18n>lSurname}:"/>
            <Input
                fieldGroupIds="input"
                placeholder="{i18n>phSurname}"
                maxLength="20"/>
            <Label
                required="true"
                text="{i18n>lAge}:"/>
            <Input
                fieldGroupIds="input"
                placeholder="{i18n>phAge}"
                type="Number"
                maxLength="3"/>
        </VBox>
        <beginButton>
            <Button
                text="{i18n>btnSave}"
                type="Emphasized"
                press="onPressSaveAuth"/>
        </beginButton>
        <endButton>
            <Button
                text="{i18n>btnClose}"
                press="onPressCloseAuthDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>

