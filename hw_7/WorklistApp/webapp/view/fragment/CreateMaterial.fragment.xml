<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Dialog
        title="{i18n>ttlCreateMaterial}">
        <VBox
            class="sapUiSmallMargin"
            validateFieldGroup="onValidateFieldGroup">
            <Label
                required="true"
                text="{i18n>ttlMaterialText}:"/>
             <Input
                id="iMaterialText"
                value="{path: 'MaterialText', type: 'sap.ui.model.odata.type.String'}"
                fieldGroupIds="input"
                maxLength="128"/>
            <Label
                required="true"
                text="{i18n>ttlRating}:"/>
            <Input
                id="iRating"
                value="{
                    path: 'Rating', 
                    type: 'sap.ui.model.odata.type.Decimal', 
                    constraints: {precision: '3', scale: '2'}
                }"
                fieldGroupIds="inputRating"/>
            <Label
                required="true"
                text="{i18n>ttlGroupText}:"/>
            <ComboBox
                id="cbGroupText"
                fieldGroupIds="comboBox"
                width="100%"
                selectedKey="{GroupID}"
                items="{
                    path: '/zjblessons_base_Groups',
                    sorter: {path: 'GroupText'},
                    filters: [
						{
							path: 'GroupText',
							operator: 'NE',
							value1: null
						}
					]
                }">
                <core:Item
                    key="{GroupID}"
                    text="{GroupText}"/>
            </ComboBox>
            <Label
                required="true"
                text="{i18n>ttlSubGroupText}:"/>    
            <ComboBox
                id="cbSubGroupText"
                fieldGroupIds="comboBox"
                width="100%"
                selectedKey="{SubGroupID}"
                items="{
                    path: '/zjblessons_base_SubGroups',
                    sorter: {path: 'SubGroupText'},
                    filters: [
						{
							path: 'SubGroupText',
							operator: 'NE',
							value1: null
						}
					]
                }">
                <core:Item
                    key="{SubGroupID}"
                    text="{SubGroupText}"/>
            </ComboBox>
            <Label
                text="{i18n>ttlMaterialDescription}"/>
            <TextArea
                width="100%"
                value="{MaterialDescription}"
                maxLength="256"
                height="10em"/>
        </VBox>
        <beginButton>
            <Button
            text="{i18n>btnSave}"
            type="Emphasized"
            press="onPressSaveMaterial"/>
        </beginButton>
        <endButton>
            <Button
            text="{i18n>btnClose}"
            press="onPressCloseCreateDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>