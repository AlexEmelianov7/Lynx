<mvc:View
	controllerName="zjblessons.WorklistApp.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
>

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/zjblessons_base_Materials',
					sorter: {
						path: 'Created',
						descending: true
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingThreshold='25'
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search="onSearch"
							liveChange="onSearch"
							width="auto">
						</SearchField>
						<Button 
							press="onPressOpenActionSheet"
							text="{i18n>btnActions}"
							type="Attention"/>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column>
						<Text text="{i18n>ttlMaterialText}"/>
					</Column>
					<Column>
						<Text text="{i18n>ttlMaterialDescription}"/>
					</Column>
					<Column>
						<Text text="{i18n>ttlCreated}"/>
					</Column>
					<Column>
						<Text text="{i18n>ttlCreatedByFullName}"/>
					</Column>
					<Column>
						<Text text="{i18n>ttlModifiedByFullName}"/>
					</Column>
					<Column>
						<Text text="{i18n>ttlModified}"/>
					</Column>
					<Column
						width="5%"/>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPressShowMaterial">
						<cells>
							<Link
								text="{MaterialText}"
								press="onPressMaterialDetailedInfo"/>
							<ObjectIdentifier
								title="{MaterialDescription}"/>
							<ObjectIdentifier
								title="{
									path: 'Created', 
									type: 'sap.ui.model.type.DateTime',
									formatOptions: {
										style: 'short'
									}
							}"/>
							<ObjectIdentifier
								title="{CreatedByFullName}"/>
							<ObjectIdentifier
								title="{ModifiedByFullName}"/>
							<ObjectIdentifier
								title="{
									path: 'Modified', 
									type: 'sap.ui.model.type.DateTime',
									formatOptions: {
										style: 'medium'
									}
							}"/>
							<Button
							 	press="onPressDeleteMaterial"
								icon="{i18n>iDelete}"
								type="Transparent"
								tooltip="{il18n>btnDelete}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>


	</semantic:SemanticPage>

</mvc:View>