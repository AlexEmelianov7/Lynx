<ActionSheet
    id="actionSheet"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    core:require="{
        MessageToast: 'sap/m/MessageToast'
    }"
    title="{i18n>ttlActionSheet}"
    showCancelButton="true"
    placement="Bottom">
   <Button
		press="onPressCreateMaterial"
		icon="{i18n>iCreate}"
		text="{i18n>btnCreate}"
	    type="Emphasized"/>
	<Button 
		press="onPressRefresh"
		icon="{i18n>iRefresh}"
		text="{i18n>btnRefresh}"/>
    <Button
		press="MessageToast.show(${i18n>msgTestBtn} + ${$source>/text})"
		icon="{i18n>iTest}"
		text="{i18n>btnTest}"
		type="Accept"/>
</ActionSheet>